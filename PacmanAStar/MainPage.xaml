<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PacmanAStar.MainPage">





    <StackLayout>

        <Entry x:Name="GridSize" Placeholder="Enter grid size"/>
        <Entry x:Name="StartNode" Placeholder="Enter start node"/>
        <Entry x:Name="DestinationNode" Placeholder="Enter destination node"/>

        <Button x:Name="GridGenerate" Text="Generate new grid" Clicked="GridGenerate_Clicked" Margin="10" MaximumWidthRequest="600"/>
        <Button Text="A* Manhattan" Clicked="A_Start_Manhattan" FontSize="Large" Padding="5" Margin="10" MaximumWidthRequest="600"/>
        <Button Text="A* Equlidean" Clicked="A_Start_Equlidean" FontSize="Large" Padding="5" Margin="10" MaximumWidthRequest="600"/>
        <Button Text="Results" Clicked="Results_clicked" FontSize="Large" Padding="5" Margin="10" MaximumWidthRequest="600"/>
        

    </StackLayout>





</ContentPage>
